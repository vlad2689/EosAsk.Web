@model NewQuestionModel

@{
    ViewBag.Title = "title";
    ViewBag.IsScatterPage = true;
    Layout = "_Layout";
}

@section Scripts
{
    <partial name="_ScatterScripts"/>
    <environment include="Development">
        <script src="~/js/scatter/index.js"></script>
    </environment>
    
    <environment exclude="Development">
        <script src="~/js/index.min.js"></script>
    </environment>
}

@using (Html.BeginForm())
{
    @Html.TextAreaFor(model => model.Text)
    
    <button type="submit">Submit</button>
}

<br/>

<div id="status"></div>

<button onclick="login()">Get Identity</button>
<button onclick="logout()">Forget Identity</button>
<button onclick="transfer()">Transfer</button>
<button onclick="hookTransfer()">Hook Transfer</button>

